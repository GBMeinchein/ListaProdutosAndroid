<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/logo2"
    tools:context="br.com.sistemasecia.consultaprodutos.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etSenha"
        android:hint="Senha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btEntrar"
        android:layout_below="@+id/cbAtualizaProdutos"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar produtos"
        android:id="@+id/cbAtualizaProdutos"
        android:layout_alignTop="@+id/etSenha"
        android:layout_alignLeft="@+id/etSenha"
        android:layout_alignStart="@+id/etSenha"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/etSenha"
        android:layout_alignEnd="@+id/etSenha" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLogoCliente"
        android:src="@drawable/logo_cliente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"/>

</RelativeLayout>
